<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/view_appbar_with_toolbar"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <com.example.yaroslavyadrov.cargofinder.ui.checkcode.CodeEditText
            android:id="@+id/editTextSymbol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:digits="0123456789"
            android:ems="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxEms="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLength="1"
            android:nextFocusLeft="@+id/editTextSymbol2"
            android:paddingTop="16dp"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextSymbol2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.33"/>

        <com.example.yaroslavyadrov.cargofinder.ui.checkcode.CodeEditText
            android:id="@+id/editTextSymbol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:digits="0123456789"
            android:ems="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxEms="1"
            android:maxLength="1"
            android:nextFocusLeft="@+id/editTextSymbol1"
            android:nextFocusRight="@+id/editTextSymbol3"
            android:paddingTop="16dp"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextSymbol3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextSymbol1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.33"/>

        <com.example.yaroslavyadrov.cargofinder.ui.checkcode.CodeEditText
            android:id="@+id/editTextSymbol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:digits="0123456789"
            android:ems="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxEms="1"
            android:maxLength="1"
            android:nextFocusLeft="@+id/editTextSymbol2"
            android:nextFocusRight="@+id/editTextSymbol4"
            android:paddingTop="16dp"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextSymbol4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextSymbol2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.33"/>

        <com.example.yaroslavyadrov.cargofinder.ui.checkcode.CodeEditText
            android:id="@+id/editTextSymbol4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:digits="0123456789"
            android:ems="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxEms="1"
            android:maxLength="1"
            android:nextFocusLeft="@+id/editTextSymbol3"
            android:nextFocusRight="@+id/editTextSymbol5"
            android:paddingTop="16dp"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextSymbol5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextSymbol3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.33"/>

        <com.example.yaroslavyadrov.cargofinder.ui.checkcode.CodeEditText
            android:id="@+id/editTextSymbol5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:digits="0123456789"
            android:ems="1"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxEms="1"
            android:maxLength="1"
            android:nextFocusRight="@id/editTextSymbol4"
            android:paddingTop="16dp"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextSymbol4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.33"/>

        <TextView
            android:id="@+id/textViewResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            tools:text="dsfsdfd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSymbol3"/>

        <TextView
            android:id="@+id/textViewDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Мы отправили сообщение с кодом подтверждения на нормер 1232131"
            tools:layout_editor_absoluteX="155dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/primaryText"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSymbol3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintVertical_bias="0.75"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>